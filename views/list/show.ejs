<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-3 mt-2">
    <h3>Listing Details</h3>
  </div>
  <div class="col-6 offset-3 show">
    <div class="card">
      <img
        src="<%= lis.image %>"
        class="card-img-top srcimg"
        alt="listing_img"
      />
      <div class="card-body">
        <p class="card-text"> <b><%= lis.title %></b> <br>
            <%= lis.description %> <br>
            â‚¹<%= lis.price ? lis.price.toLocaleString("en-IN") : "N/A" %> <br>
            <%= lis.location %> <br>
            <%= lis.country %>
        </p>
      </div>
    </div>
    <br />
    <div class="btns mb-2">
         <a href="/listing/<%= lis._id %>/edit" class="btn btn-outline-secondary">Edit</a> <br />
    <form method="post" action="/listing/<%= lis._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5 del">Delete</button>
    </form>
    </div>
</div>
</div>
